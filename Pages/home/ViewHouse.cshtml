@page
@model RentHouse.Pages.home.ViewHouseModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model.House)
        {
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="https://image.shutterstock.com/image-photo/luxurious-new-construction-home-bellevue-260nw-555325381.jpg" alt="Card image">
                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(modelItem => item.HName) </h4>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Specification)</p>
                        <a href="#" class="btn btn-primary">@Html.DisplayFor(modelItem => item.Price)</a>
                    </div>

                </div>

            </div>
        }
        </div>
</div>
